<UserControl x:Class="Perpetuum.AdminTool.StatusTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="statusTextGrid">
        <TextBox x:Name="statusText" Background="{x:Null}" BorderBrush="{x:Null}" AllowDrop="False" Focusable="False"
                 IsHitTestVisible="False" IsTabStop="False" FontSize="10" />
    </Grid>
</UserControl>
